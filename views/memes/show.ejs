<% layout('layouts/boilerplate')%>

    <div class="row justify-content-center">
        <div class="col-6">
            <div class="container-fluid px-0 ">
                <div class="row">
                    <div class="col-md-12">
                        <img class="img-fluid" src="<%=meme.image.url %>" alt="">
                    </div>
                </div>

            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= meme.title%>
                    </h5>
                    <p class="card-text">
                        <%= meme.description%>
                    </p>
                </div>

                <div class="card-footer text-muted">
                    2 days ago
                </div>
                <div>

                    <form class="d-inline" action="/memes/<%=meme._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>


        </div>
        <div class="col-6">
            <h2>Leave a Comment</h2>
            <form action="/memes/<%=meme._id%>/comments" method="POST" class="mb-3 validated-form" novalidate>
                <!-- <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="body">Comment Text</label>
                    <textarea class="form-control" name="comment[body]" id="body" cols="30" rows="3"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% for(let comment of meme.comments) { %>
                <div class="card mb-3 ">
                    <div class="card-body">



                        <p class="card-text">Comment: <%= comment.body %>
                        </p>

                        <form action="/memes/<%=meme._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>

                    </div>
                </div>
                <% } %>
        </div>



    </div>

    </div>